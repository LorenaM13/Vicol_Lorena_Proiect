@page
@model Vicol_Lorena_Proiect.Pages.Echipe.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Echipa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Echipa.ID" />
            <div class="form-group">
                <label asp-for="Echipa.EchipaNume" class="control-label"></label>
                <input asp-for="Echipa.EchipaNume" class="form-control" />
                <span asp-validation-for="Echipa.EchipaNume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedAngajatDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox" name="selectedAngajati" value="@cat.AngajatID" @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.AngajatID @: @cat.Nume
                                    @:</td>
                                }
                             @:</tr>
                             }
                     </table>
                </div>
             </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
