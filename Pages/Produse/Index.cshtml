@page
@model Vicol_Lorena_Proiect.Pages.Produse.IndexModel

@{
    ViewData["Title"] = "Produse";
}

<h1>Produse</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Cauta Produs / Alergeni / Ingrediente :
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Ingrediente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Alergeni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Cantitate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].Echipa.EchipaNume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produs[0].CategorieProduse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProdusD.Produse) {
    string selectedRow = "";
            if (item.ID == Model.ProdusID)
        {
            selectedRow = "table-success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingrediente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alergeni)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantitate)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Echipa.EchipaNume)
            </td>
                <td>
                    @{
                        foreach (var categorie in item.CategorieProduse)
                        {
                            @categorie.Categorie.ID @: @categorie.Categorie.NumeCategorie <br />
                        }
                    }
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
