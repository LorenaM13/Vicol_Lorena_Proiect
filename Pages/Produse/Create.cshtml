@page
@model Vicol_Lorena_Proiect.Pages.Produse.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produs.Nume" class="control-label"></label>
                <input asp-for="Produs.Nume" class="form-control" />
                <span asp-validation-for="Produs.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.Ingrediente" class="control-label"></label>
                <input asp-for="Produs.Ingrediente" class="form-control" />
                <span asp-validation-for="Produs.Ingrediente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.Alergeni" class="control-label"></label>
                <input asp-for="Produs.Alergeni" class="form-control" />
                <span asp-validation-for="Produs.Alergeni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.Cantitate" class="control-label"></label>
                <input asp-for="Produs.Cantitate" class="form-control" />
                <span asp-validation-for="Produs.Cantitate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.Pret" class="control-label"></label>
                <input asp-for="Produs.Pret" class="form-control" />
                <span asp-validation-for="Produs.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produs.EchipaID" class="control-label">Numele echipei</label>
                <select asp-for="Produs.EchipaID" class="form-control" asp-items="ViewBag.EchipaID">
                </select>
                <span asp-validation-for="Produs.EchipaID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedCategorieDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox" name="selectedCategorii" value="@cat.CategorieID" @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.CategorieID @: @cat.Nume
                                    @:</td>
                                }
                             @:</tr>
                             }
                     </table>
                </div>
             </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
